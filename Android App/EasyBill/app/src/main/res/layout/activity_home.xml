<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="sj_infotech.serveport.home"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView6"
        android:layout_margin="@dimen/abc_action_bar_content_inset_material">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Scan Products"
                android:id="@+id/scan_product"
                android:background="@drawable/ripple_effect"
                android:textColor="@android:color/white"
                android:layout_alignParentTop="true"
                android:onClick="onscan"
                android:theme="@style/AppTheme"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_margin="@dimen/abc_action_bar_content_inset_material" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Generate Bill Manually"
                android:id="@+id/gen_bill_manually"
                android:background="@drawable/ripple_effect"
                android:textColor="@android:color/white"
                android:layout_alignParentTop="true"
                android:onClick="ongenbillmanually"
                android:theme="@style/AppTheme"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_margin="@dimen/abc_action_bar_content_inset_material" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Admin"
                android:id="@+id/admin"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/abc_action_bar_content_inset_material"
                android:onClick="onadmin"
                android:background="@drawable/ripple_effect"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
