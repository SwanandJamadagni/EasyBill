<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sj_infotech.easybill" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".welcome"
            android:label="@string/app_name"
            android:noHistory="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".login"
            android:label="@string/title_activity_login"
            android:noHistory="true"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize" >
        </activity>
        <activity
            android:name=".home"
            android:label="@string/title_activity_home" >
        </activity>
        <activity
            android:name=".users"
            android:label="@string/title_activity_users"
            android:noHistory="true" >
        </activity>
        <activity
            android:name=".bill"
            android:label="@string/title_activity_bill"
            android:noHistory="true"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize" >
        </activity>
        <activity
            android:name=".printbill"
            android:label="@string/title_activity_printbill" >
        </activity>
        <activity
            android:name=".Add_Product"
            android:label="@string/title_activity_add__product" >
        </activity>
        <activity
            android:name=".Scan_Product"
            android:label="@string/title_activity_scan__product" >
        </activity>
        <activity
            android:name=".Add_Stock"
            android:label="@string/title_activity_add__stock"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize" >
        </activity>
        <activity
            android:name=".Generate_QR_Code"
            android:label="@string/title_activity_generate__qr__code" >
        </activity>
        <activity
            android:name=".Print_QR_Code"
            android:label="@string/title_activity_print__qr__code" >
        </activity>
        <activity
            android:name=".Add_Category"
            android:label="@string/title_activity_add__category" >
        </activity>
        <activity
            android:name=".Admin"
            android:label="@string/title_activity_admin" >
        </activity>
        <activity
            android:name=".Add_Uncoded_Product"
            android:label="@string/title_activity_add__uncoded__product" >
        </activity>
        <activity
            android:name=".Manual_Bill"
            android:label="@string/title_activity_manual__bill" >
        </activity>
        <activity
            android:name=".manual_printbill"
            android:label="@string/title_activity_manual_printbill" >
        </activity>
        <activity
            android:name=".SQLite"
            android:label="@string/title_activity_sqlite" >
        </activity>
    </application>

</manifest>
